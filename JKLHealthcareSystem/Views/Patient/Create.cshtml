@model JKLHealthcareSystem.Models.Patient

@{
    ViewData["Title"] = "Create Patient";
}

<h2>Create New Patient</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Patient Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" />
    </div>
    <div class="form-group">
        <label for="MedicalRecords">Medical Records</label>
        <textarea class="form-control" id="MedicalRecords" name="MedicalRecords"></textarea>
    </div>
    <div class="form-group">
        <label for="CreatedBy">Created By</label>
        <input type="text" class="form-control" id="CreatedBy" name="CreatedBy" value="@User.Identity.Name" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Patient")" class="btn btn-secondary">Cancel</a>
</form>
